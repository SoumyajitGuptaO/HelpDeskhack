<% layout('layout/../boilerplate.ejs') %>

<link rel="stylesheet" href="styles/register.css">

<form action="/register" method="post">
    <h2>Register</h2>
    <label for="fullname">Enter Full Name: </label>
    <input type="text" placeholder="Full Name" name="fullname">
    <br>
    <label for="username">Enter a Username: </label>
    <input type="text" placeholder="Username" name="username">
    <br>
    <label for="email">Enter your Email: </label>
    <input type="email" placeholder="Email Id" name="email">
    <br>
    <label for="username">Enter your Phone Number: </label>
    <input type="number" placeholder="Phone Number" name="phone">
    <br>
    <label for="post">Enter your Post: </label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="post" id="inlineRadio1" value="Admin">
            <label class="form-check-label" for="inlineRadio1">Admin</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="post" id="inlineRadio2" value="Legal Team">
            <label class="form-check-label" for="inlineRadio2">Legal Team</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="post" id="inlineRadio2" value="Employee">
            <label class="form-check-label" for="inlineRadio2">Employee</label>
        </div>
    <br>
    <label for="password">Enter a Password: </label>
    <input type="password" placeholder="Password" name="password">
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>